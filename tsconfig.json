{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    /* Strictness */
    "strict": true,
    "noImplicitAny": false,
    "noImplicitOverride": true,

    /* Transpiling with TypeScript */
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,

    /* Not running in the DOM */
    "lib": ["es2022"]
  },
  "include": ["src/"]
}